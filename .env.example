# Image Base64 Converter - Environment Variables Template
# Copy this file to .env and customize the values for your environment

# Application Environment
ENVIRONMENT=development
APP_NAME="Image Base64 Converter"
APP_VERSION=2.0.0

# Web Server Configuration
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=false
SECRET_KEY=change-this-to-a-secure-random-key-in-production

# Security Settings
MAX_FILE_SIZE_MB=10
ENABLE_SECURITY_SCAN=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
ENABLE_IP_BLOCKING=false

# Cache Configuration
CACHE_BACKEND=disk
CACHE_DIR=./cache
CACHE_MAX_SIZE_MB=100
CACHE_MAX_AGE_HOURS=24
REDIS_URL=redis://localhost:6379/0

# Processing Settings
MAX_CONCURRENT_PROCESSING=3
ENABLE_MEMORY_OPTIMIZATION=true
PARALLEL_PROCESSING_WORKERS=4
MAX_MEMORY_USAGE_MB=500

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs
ENABLE_FILE_LOGGING=true
ENABLE_STRUCTURED_LOGGING=true
ENABLE_SECURITY_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# Directory Paths
DATA_DIR=./data
TEMP_DIR=./temp

# Database (if using database features in future)
# DATABASE_URL=sqlite:///./data/app.db
# DATABASE_POOL_SIZE=5

# External Services (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# PROMETHEUS_METRICS_PORT=9090

# Development Settings (only for development environment)
# FLASK_ENV=development
# FLASK_DEBUG=true
# TESTING=false

# Production Settings (only for production environment)
# GUNICORN_WORKERS=4
# GUNICORN_WORKER_CLASS=eventlet
# GUNICORN_BIND=0.0.0.0:8080
# GUNICORN_TIMEOUT=120

# SSL/TLS Settings (for HTTPS)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# SSL_ENABLED=false

# CORS Settings
# CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
# CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
# CORS_HEADERS=["Content-Type", "Authorization"]

# Rate Limiting
# RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
# RATE_LIMIT_STRATEGY=fixed-window

# File Upload Settings
# UPLOAD_FOLDER=./uploads
# MAX_CONTENT_LENGTH_MB=16
# ALLOWED_EXTENSIONS=["png", "jpg", "jpeg", "gif", "webp", "bmp", "tiff"]

# Monitoring and Metrics
# ENABLE_METRICS=true
# METRICS_PORT=9090
# HEALTH_CHECK_ENDPOINT=/health

# Background Tasks (if using Celery or similar)
# CELERY_BROKER_URL=redis://localhost:6379/2
# CELERY_RESULT_BACKEND=redis://localhost:6379/3
# CELERY_WORKER_CONCURRENCY=4

# Email Settings (for notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# Cloud Storage (if using cloud storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# Content Delivery Network
# CDN_URL=https://your-cdn-domain.com
# CDN_ENABLED=false